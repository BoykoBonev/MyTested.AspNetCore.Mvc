{
  "title": "MyTested.Mvc",
  "description": "MyTested.Mvc is a powerful unit testing library providing easy fluent interface to test the ASP.NET Core MVC framework.",
  "version": "1.0.0-beta",
  "authors": [ "Ivaylo Kenov" ],
  "packOptions": {
    "projectUrl": "https://github.com/ivaylokenov/MyTested.Mvc",
    "licenseUrl": "https://github.com/ivaylokenov/MyTested.Mvc/blob/master/LICENSE",
    "tags": [ "aspnetcore", "aspnetcoremvc", "testing", "unit", "tests", "fluent", "testing", "framework", "asp", "net", "core", "mvc", "test", "mymvc" ]
  },

  "buildOptions": {
    "compilationOptions": {
      "warningsAsErrors": true,
      "xmlDoc": true
    }
  },

  "dependencies": {
    "Microsoft.AspNetCore.Mvc": "1.0.0-rc2-*",
    "Microsoft.AspNetCore.Session": "1.0.0-rc2-*",
    "Microsoft.AspNetCore.TestHost": "1.0.0-rc2-*"
  },

  "frameworks": {
    "net451": { },
    "netstandard1.5": {
      "imports": [
        "portable-net451+win8"
      ]
    }
  }
}
